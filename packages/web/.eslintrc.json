{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "@typescript-eslint/no-namespace": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 4],
    "prettier/prettier": [
      "warn",
      {
        "semi": true,
        "tabWidth": 4,
        "endOfLine": "auto",
        "singleQuote": true,
        "bracketSameLine": true,
        "bracketSpacing": true,
        "comma-dangle": true
      }
    ]
  },
  "root": true
}
